<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow_base"
    tools:context=".Activities.activity.MainActivity"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/menu_text_big"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:fontFamily="@font/days_one"
            android:gravity="center"
            android:text="KUCHING"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="60sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="150dp"
            android:fontFamily="@font/days_one"
            android:text="Street Workout"
            android:gravity="center"
            android:textSize="30dp"
            android:textColor="#2C3030"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/menu_text_big" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnWorkout"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="@color/black"
            android:drawableBottom="@drawable/ic_workout"/>

        <Button

            android:id="@+id/btnUserProfile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnWorkout"
            android:layout_marginStart="40dp"
            android:layout_marginTop="95dp"
            android:backgroundTint="@color/black"
            android:drawableBottom="@drawable/ic_userprofile"/>

        <Button
            android:id="@+id/btnTimer"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="40dp"
            android:backgroundTint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:drawableBottom="@drawable/ic_timer"/>

        <Button

            android:id="@+id/btnCalcul"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="95dp"
            android:layout_marginEnd="40dp"
            android:backgroundTint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnTimer"
            android:drawableBottom="@drawable/ic_calcul"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>